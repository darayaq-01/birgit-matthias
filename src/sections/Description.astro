---
import { getEntry } from 'astro:content';
import Container from '@components/Container.astro';
import ProseTemplate from '@components/ui/ProseTemplate.astro';

const entry = await getEntry('description', 'description');
if (!entry?.data) {
    throw new Error('Error: Not found description entry');
}
const { description } = entry.data;
---

<Container classAstro='w-fit lg:h-screen flex place-items-center'>
    <article
        class='prose prose-2xl lg:prose-3xl bg-slate-200/80 px-4 lg:max-w-full p-14 md:py-32'
    >
        {
            description && (
                <ProseTemplate>
                    {description.split('\n').map((item) => (
                        <p>{item}</p>
                    ))}
                </ProseTemplate>
            )
        }
    </article>
</Container>
