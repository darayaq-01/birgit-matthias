---
import { getEntry } from 'astro:content';

const entry = await getEntry('events', 'next');
console.log(entry);
if (!entry?.data) {
    throw new Error('No se encontr√≥ el evento');
}
---

{
    entry.data.title === '' ? null : (
        <section>
            <div class='flex flex-col md:flex-row bg-[#1e0576] ml-auto max-w-1/3 prose'>
                <div class='px-7 py-5 font-normal text-pretty text-white'>
                    <h1 class='mb-4 text-xl font-bold underline leading-none tracking-tight text-white'>
                        {entry.data.title}
                    </h1>
                    <p class='text-xl leading-normal'>{entry.data.venue}</p>
                    <p class='text-xl leading-normal'>{entry.data.dateEvent}</p>

                    {entry.data.description && (
                        <div class='text-xl leading-normal'>
                            {entry.data.description}
                        </div>
                    )}

                    {entry.data.linkEvent && (
                        <div class='leading-normal hover underline hover:font-bold hover:transition-all hover:duration-300'>
                            <a
                                href={`https://${entry.data.linkEvent}`}
                                target='_blank'
                                rel='noopener noreferrer'
                                class='hover:text-white text-blue-200'
                            >
                                {entry.data.linkEvent}
                            </a>
                        </div>
                    )}
                </div>
            </div>
        </section>
    )
}
