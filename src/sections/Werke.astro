---
import { Image } from 'astro:assets';
import { werkeData } from '@consts/werkeData';
import Container from '@components/Container.astro';
---

<Container classAstro='h-screen' id='werke'>
    <header class='ml-32'>
        <h2 class='text-3xl pb-16 font-bold'>
            <span class='border-b-2 border-white pb-1'>Werke</span>
        </h2>
    </header>

    <article
        class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 bg-white p-10 lg:min-w-max'
    >
        {
            werkeData.map((w) => (
                <a href={w.slug} class='flex relative aspect-square gap-10 '>
                    <Image
                        alt='gallery'
                        class='absolute inset-0 w-full h-full object-cover object-center'
                        src={w.imageUrl}
                        height={w.height}
                        width={w.width}
                    />
                    <article class='flex flex-col justify-center relative z-10 w-full bg-slate-600/80 opacity-0 hover:opacity-100'>
                        <h3 class='p-6 break-words text-shadow-custom text-3xl md:text-4xl text-balance text-center text-white font-extrabold leading-relaxed'>
                            {w.title}
                        </h3>
                    </article>
                </a>
            ))
        }
    </article>
</Container>

<style>
    .text-shadow-custom {
        text-shadow: 0 0 10px #020202;
    }
</style>
