---
import { getEntry } from 'astro:content';

const entry = await getEntry('hero', 'herocontent');
if (!entry?.data) {
    throw new Error('Fehler: Nicht gefunden hero Eintrag');
}
const { imageUrl, imageAlt } = entry.data;
---

<section
    class='relative md:h-dvh md:mb-20 overflow-visible pt-20 sm:pt-24 md:pt-0'
>
    <img
        src={imageUrl}
        alt={imageAlt}
        class='w-full h-[65vh] md:h-full object-cover object-center md:object-top'
    />
    <div class='relative md:absolute md:inset-0 md:h-full'>
        <slot />
    </div>
</section>
