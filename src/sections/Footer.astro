---
import Container from '@components/Container.astro';
import { links } from '@consts/links';

const currentPath = Astro.url.pathname;
---

<footer class='lg:max-w-screen py-14 pr-12 text-sm md:h-28 lg:my-10'>
    <Container>
        <ul class='flex flex-col gap-4 sm:flex-row sm:items-center sm:gap-10'>
            {
                links.slice(0, 4).map((item) => (
                    <li>
                        <a
                            href={item.url}
                            rel='noopener noreferrer'
                            class={`footer-link md:prose-xl uppercase text-gray-600 hover:text-black hover:underline w-fit hover:scale-110 transition-all duration-300 ease-in-out ${currentPath === item.url ? 'line-through' : ''}`}
                        >
                            {item.imgSrc ? (
                                <img
                                    src={item.imgSrc}
                                    height={item.imgHeight}
                                    width={100}
                                    alt={item.alt}
                                    class='aspect-auto object-contain hover:scale-110'
                                />
                            ) : (
                                item.name
                            )}
                        </a>
                    </li>
                ))
            }
        </ul>
    </Container>
</footer>
