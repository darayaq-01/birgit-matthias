<script>
    document.addEventListener('DOMContentLoaded', () => {
        const sentinel = document.getElementById('sentinel');
        const navbarElement = document.getElementById('navbar');
        const logoElement = navbarElement?.querySelector('.logoClass');
        const linkElement = navbarElement?.querySelector('.linkLogoClass');

        const observerOptions = {
            root: null,
            rootMargin: '10px',
            threshold: 0,
        };

        const observerCallback = (entries) => {
            entries.forEach((entry) => {
                if (!entry.isIntersecting) {
                    linkElement?.classList.remove('initial-scroll');
                    linkElement?.classList.add('on-scroll');
                    logoElement?.classList.remove('initial-scroll-svg');
                    logoElement?.classList.add('on-scroll');
                } else {
                    linkElement?.classList.add('initial-scroll');
                    linkElement?.classList.remove('on-scroll');
                    logoElement?.classList.add('initial-scroll-svg');
                    logoElement?.classList.remove('on-scroll');
                }
            });
        };

        const observer = new IntersectionObserver(
            observerCallback,
            observerOptions
        );
        if (sentinel) {
            observer.observe(sentinel);
        }
    });
</script>
