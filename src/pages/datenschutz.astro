---
import Layout from '@layouts/Layout.astro';
import Container from '@components/Container.astro';
import TitleSection from '@components/ui/TitleSection.astro';
import ProseTemplate from '@components/ui/ProseTemplate.astro';

import { getEntry } from 'astro:content';

const entry = await getEntry('datenschutz', 'datenschutz');
if (!entry?.data) {
    throw new Error('Error: Not found datenschutz entry');
}
const { privacyPolicy } = entry.data;
---

<Layout
    title='Datenschutz'
    backgroundColor='bg-white'
    navbarProps='bg-white/70 h-30 md:h-34 lg:h-16'
>
    <Container
        classAstro='w-fit md:w-5/6 lg:w-[60%] flex flex-col pt-32 md:pt-56 mb-8 px-4 lg:px-0'
    >
        <TitleSection title='Datenschutz' />
        <ProseTemplate>
            {privacyPolicy}
        </ProseTemplate>
    </Container>
</Layout>
