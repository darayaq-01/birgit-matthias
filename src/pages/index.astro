---
import Layout from '@layouts/Layout.astro';
import Hero from '@sections/Hero.astro';
import Description from '@sections/Description.astro';
import Ausstellungen from '@sections/Ausstellungen.astro';
import Navbar from '@sections/Navbar.astro';
import CallToAction from '@sections/CallToAction.astro';
import Gallery from '@sections/Gallery.astro';
---

<Layout title='Birgit Mathias Malerei'>
    <Hero>
        <Navbar />
        <div
            class='flex flex-col items-center justify-end h-full pb-4 px-6 sm:px-0 drop-shadow-2xl'
        >
            <CallToAction />
        </div>
    </Hero>
    <Description />
    <Ausstellungen />
    <div id='gallery'>
        <Gallery />
    </div>
</Layout>
