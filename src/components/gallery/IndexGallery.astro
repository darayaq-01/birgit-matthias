---
import Layout from '@layouts/Layout.astro';
import GridCell from '@components/GridCell.astro';
import Arrow from '@assets/UI/Arrow.astro';
import Container from '@components/Container.astro';
interface Props {
    title: string;
    header: string;
    dataArt: any;
}
const { title, header, dataArt } = Astro.props;
---

<Layout
    title={title}
    backgroundColor='bg-white'
    navbarProps='bg-white/60 backdrop-blur-sm drop-shadow-md'
>
    <Container classAstro='w-[60%] flex flex-col place-items-center pt-56'>
        <section class='h-fit'>
            <header>
                <h2 class='py-8 pl-20 text-3xl font-bold'>
                    <span class='border-b-2 border-white pb-1'>{header}</span>
                </h2>
            </header>

            <div class='grid--large grid bg-white'>
                <div class='flex items-end px-4 pb-4'>
                    <a
                        href='/#werke'
                        class='transition-all duration-300 ease-in-out hover:scale-150'
                    >
                        <Arrow class='m-auto mb-6 ml-4 w-14 md:w-6' />
                    </a>
                </div>

                {
                    dataArt.map((art, index) => (
                        <GridCell data={art} dataIndex={index} />
                    ))
                }
            </div>
        </section>
    </Container>
</Layout>
