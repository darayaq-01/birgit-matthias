---
import Layout from '@layouts/Layout.astro';
import GridCell from '@components/GridCell.astro';
import Arrow from '@assets/UI/Arrow.astro';
import Container from '@components/Container.astro';
import TitleSection from '@components/ui/TitleSection.astro';
import type { detailsArtwork } from '@utils/types';

interface Props {
    title: string;
    header: string;
    dataArt: any;
}
const { title, header, dataArt } = Astro.props;
---

<Layout
    title={title}
    backgroundColor='bg-white'
    navbarProps='bg-white/60 backdrop-blur-sm drop-shadow-md'
>
    <Container
        classAstro=' md:w-[60%] flex flex-col place-items-center pt-56 px-4 lg:px-0'
    >
        <section class='h-fit'>
            <TitleSection title={header} />

            <div class='grid--large grid bg-white'>
                <div class='flex items-end px-4 pb-4'>
                    <a
                        href='/#werke'
                        class='transition-all duration-300 ease-in-out hover:scale-150'
                    >
                        <Arrow class='m-auto mb-6 w-14 md:ml-4 md:w-6' />
                    </a>
                </div>

                {
                    dataArt.map(
                        (art: detailsArtwork, index: number | undefined) => (
                            <GridCell data={art} dataIndex={index} />
                        )
                    )
                }
            </div>
        </section>
    </Container>
</Layout>
