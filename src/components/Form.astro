---
import TitleSection from './ui/TitleSection.astro';
import ProseTemplate from './ui/ProseTemplate.astro';

interface Props {
    articleClassForm?: string;
}

const { articleClassForm } = Astro.props;
---

<article class:list={[articleClassForm]}>
    <TitleSection title='Kontakt' />

    <form
        name='kontakt'
        method='POST'
        data-netlify='true'
        netlify-honeypot='bot-field'
        action='/success/'
        class='needs-validation flex flex-col rounded-lg'
    >
        <input type='hidden' name='form-name' value='kontakt' />

        <ProseTemplate class='mb-4 flex flex-col'>
            <label for='email' class='prose-2xl text-gray-600'>Email</label>
            <input
                type='email'
                id='email'
                name='email'
                class='prose w-full rounded border border-gray-300 bg-white px-3 py-1 text-base text-gray-700 outline-none transition-colors duration-200 ease-in-out focus:border-[#ec008c]/80 focus:ring-2 focus:ring-[#ec008c]/40'
                required
            />
        </ProseTemplate>
        <ProseTemplate class='mb-4 flex flex-col'>
            <label for='message' class='prose-2xl text-gray-600'>Message</label>
            <textarea
                id='message'
                name='message'
                maxlength='500'
                class='prose h-32 w-full resize-none rounded border border-gray-300 bg-white px-3 py-1 text-gray-700 outline-none transition-colors duration-200 ease-in-out focus:border-[#ec008c]/80 focus:ring-2 focus:ring-[#ec008c]/40'
            ></textarea>
        </ProseTemplate>
        <button
            type='submit'
            class='prose prose-2xl rounded border-0 bg-[#ec008c]/50 px-6 py-2 text-lg font-bold uppercase text-white hover:bg-[#ec008c] focus:outline-none'
            >Send</button
        >
    </form>
</article>
