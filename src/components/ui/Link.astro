---
interface Props {
    href: string;
    size?: 'md' | 'lg' | 'xl';
    block?: boolean;
    style?: 'outline' | 'primary' | 'inverted' | 'muted';
    class?: string;
    [x: string]: any;
}

const {
    href,
    block,
    size = 'md',
    style = 'primary',
    class: className,
    ...rest
} = Astro.props;

const sizes = {
    xl: 'px-[3em] py-4',
    lg: 'px-10 py-2.5',
    md: 'px-4 pb-4 pt-6',
};

const styles = {
    outline: 'bg-white border-2 border-black hover:bg-gray-100 text-black ',
    // modified
    primary:
        'prose rounded border-0 bg-[#ec008c]/50  text-lg font-bold uppercase text-white hover:bg-[#ec008c] focus:outline-none',
    inverted:
        'bg-[#033277] text-white hover:bg-[#dfecf7] hover:text-[#2b2523] hover:border-[#033277] border-2 border-transparent',
    muted: 'bg-gray-100 hover:bg-gray-200 border-2 border-transparent',
};
---

<a
    href={href}
    {...rest}
    class:list={[
        'text-center transition prose focus-visible:ring-2 ring-offset-2 ring-gray-200',
        block && 'w-full',
        sizes[size],
        styles[style],
        className,
    ]}
    ><slot />
</a>
