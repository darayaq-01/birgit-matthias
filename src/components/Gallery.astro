---
import { Image } from 'astro:assets';

import Container from '@components/Container.astro';
import { austellungenData } from '../data/ausstellungenData.ts';
---

<Container classAstro='bg-white px-5 py-24 mx-auto'>
    <div class='flex flex-col text-center w-full mb-20'>
        <h2 class='text-3xl text-left py-6 font-bold'>
            <span class='border-b-2 border-black pb-1'>Ausstellungen</span>
        </h2>
    </div>

    <div class='grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4'>
        {
            austellungenData.map((ausstellung) => (
                <a
                    href={ausstellung.slug}
                    class='flex relative h-[400px] gap-5 '
                >
                    <Image
                        alt='gallery'
                        class='absolute inset-0 w-full h-full object-cover object-center'
                        src={ausstellung.imageUrl}
                        height={ausstellung.height}
                        width={ausstellung.width}
                    />
                    <div class='flex flex-col  justify-center relative z-10 w-full bg-slate-400/70 opacity-0 hover:opacity-100'>
                        <h3 class='text-shadow-custom text-5xl text-balance text-center text-red-500  font-extrabold leading-relaxed'>
                            {ausstellung.title}
                        </h3>
                    </div>
                </a>
            ))
        }
    </div>
</Container>
